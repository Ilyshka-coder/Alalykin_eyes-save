<Page x:Class="Алалыкин_Глазки_save.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Алалыкин_Глазки_save"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Century Gothic">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Наименование" FontSize="15" Height="20" Width="150" />
            <TextBox Text="{Binding Title}" FontSize="15" Height="20" Width="250" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Адрес" FontSize="15" Height="20" Width="150" />
            <TextBox Text="{Binding Address}" FontSize="15" Height="20" Width="250" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="ФИО директора" FontSize="15" Height="20" Width="150" />
            <TextBox Text="{Binding DirectorName}" FontSize="15" Height="20" Width="250" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Логотип" FontSize="15" Width="150" Height="20" />
            <Image Name="LogoImage" Source="{Binding AgentLogo}">
            </Image>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Тип аренды" FontSize="15" Width="150" Height="20" />
            <ComboBox Width="100" Height="30" FontSize="15" Name="ComboBoxType">
                <Label Content="МФО"/>
                <Label Content="ООО"/>
                <Label Content="ЗАО"/>
                <Label Content="МКК"/>
                <Label Content="ОАО"/>
                <Label Content="ПАО"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Приоритет" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Priority}" FontSize="15" Height="20" Width="250"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="ИНН" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding INN}" FontSize="15" Height="20" Width="250"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="КПП" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding KPP}" FontSize="15" Height="20" Width="250"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Email" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Email}" FontSize="15" Height="20" Width="250"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="Телефон" FontSize="15" Width="150" Height="20"/>
            <TextBox Text="{Binding Phone}" FontSize="15" Height="20" Width="250"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Изменить" Name="ChangePictureBtn" Click="ChangePictureBtn_Click" />
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button Content="Сохранить" Name="SaveBtn" Click="SaveBtn_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Удалить" Name="DeleteBtn" Click="DeleteBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
